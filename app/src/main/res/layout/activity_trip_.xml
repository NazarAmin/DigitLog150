<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Trip_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/border"

            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/engine_n"
                android:text="Engine_1"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/redshine"
                android:layout_gravity="center"
                android:paddingTop="10dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:text="New Trip"
                android:textStyle="bold"
                android:layout_marginLeft="80dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:paddingTop="10dp">
            </TextView>
        </LinearLayout>

        <ScrollView
            android:id="@+id/scroll2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <LinearLayout
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Pick the Date"
                    android:background="@color/white"
                    android:paddingStart="10dp"
                    android:drawableStart="@drawable/ic_baseline_access_time_24"
                    android:onClick="showDatePickerDialog" />

                <Button
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Pick Time"
                    android:background="@color/white"
                    android:drawableStart="@drawable/ic_baseline_date_range_24"
                    android:layout_marginLeft="20dp"
                    android:paddingStart="10dp"
                    android:onClick="showTimePickerDialog" />

            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:text="Date and Time"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--------------------------"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/datetimetv"></TextView>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp"
                    android:text="Load Details"></TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/rg">

                    <RadioButton
                        android:id="@+id/bl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:checked="true"
                        android:text="Base Load"

                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <RadioButton
                        android:id="@+id/pl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:checked="false"
                        android:text="Partial Load"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    </RadioGroup>
                </LinearLayout>

                     <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Fuel Type"></TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/ldo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:checked="true"
                        android:text="LDO"
                        android:onClick="onCheckboxClicked"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <CheckBox
                        android:id="@+id/hcgo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:checked="false"
                        android:text="HCGO"
                        android:onClick="onCheckboxClicked"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trip Description"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_gravity="left"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp">
                    </TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="description"
                        android:background="@color/white"
                        android:textColor="@color/green"
                        android:textSize="20sp"
                        android:id="@+id/description"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alarm List"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_gravity="left"
                        android:textStyle="bold"
                        android:paddingLeft="20dp"
                        android:paddingTop="15dp">
                    </TextView>



                    <EditText
                        android:id="@+id/alarms"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/border"
                        android:gravity="left"
                        android:hint="List major alarms shown"
                        android:textColor="@color/black"
                        >
                    </EditText>

                    <Button
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:text="save"
                        android:textStyle="bold"
                        android:id="@+id/sub_btn"
                        tools:ignore="OnClick"></Button>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
